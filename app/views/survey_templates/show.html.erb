<% # this is show view for the SurveyTemplate model views/survey_template/show.html.haml %>
<h2>
  <%= @survey_title %>
</h2>
<h5>
  <%= @survey_description %>
</h5>
<%= form_tag submissions_path :template_id => @id do %>
    <% @fields.each do |field| %>
        <%= label :submission, field.id, field.question_title, class: "field_label" %>
        <%= text_field :submission, field.id, class: "field_box" %>
        <br>
    <% end %>
    <br>

    <div >
      <%= submit_tag 'Submit', id: "survey_submit", class: "submit"%>
    </div>

<% end %>
