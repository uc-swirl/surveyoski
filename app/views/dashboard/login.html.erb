<html>
    <head>
      <link href="http://fonts.googleapis.com/css?family=Ubuntu:400,500" rel="stylesheet" type="text/css">
    </head>

    <body>
        <%= render 'layouts/header' %>
        <div id = "background">
          <img src = "../../assets/UC-Berkeley-151.jpg">
        </div>
            <% if current_user %>
                <div id = "notice">
                  <%= flash[:notice] %>
                  Signed in as <strong><%= current_user.name  %></strong>! <%= link_to "Sign Out", signout_path, id: "sign_out" %>
                </div>
                <% else %>

            <div id="gSignInWrapper">
              <div id="customBtn" class="customGPlusSignIn">
                <span class="icon"></span>
                <a id="sign_in" href = "/auth/google_oauth2">Log in with Google</a>
              </div>
            </div>
        <% end %>
    </body>
</html>